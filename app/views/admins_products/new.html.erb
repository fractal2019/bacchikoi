
<div class="container" style="width:800px;" >

<div class="text-center mx-auto my-4">
  <button type="button" class="btn btn-lg btn-primary">管理者トップページへ</button>
</div>


<%= form_for do |f| %>  -->
<h3>商品の新規追加</h3>
<div class="card p-3">
<form>
  <div class="form-group">
  	<%= f.label :File %>
  	<!-- <%#= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg", :size =>"50x50" %> -->画像
    <input type="file" class="form-control-file" id="File">
  </div>

  <div class="form-group">
  	<%= f.label :シングル名/アルバム名 %>
    <!-- <label for="inputDiscs">シングル名/アルバム名</label> -->
    <%= f.text_field :disc_name %>
    <!-- <input type="text" class="form-control" id="inputDiscs" placeholder="ここにシングル/アルバム名を記入"> -->
  </div>

  <div class="form-group">
  	<%= f.label : アーティスト名%>
    <!-- <label for="inputArtists">アーティスト名</label> -->
    <%= f.text_field :artist_name %>
    <!-- <input type="text" class="form-control" id="inputArtists" placeholder="ここにアーティスト名を記入"> -->
  </div>

  <div class="form-group">
  	<%= f.label : 価格　%>
    <!-- <label for="inputPrice">価格</label> -->
    <div class="input-group">
      
      <input type="text" class="form-control col-2" id="inputPrice">
      <div class="ml-2">円</div>
    </div>
  </div>

  <div class="form-group">
    <label for="exampleSelect1exampleFormControlSelect1">在庫数</label>
    <div class="input-group">
      <select class="form-control col-1" id="exampleFormControlSelect1">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
      <div class="ml-2">個</div>
    </div>
  </div>

  <div class="form-group">
    <label for="inputRelease">発売日</label>
    <input type="text" class="form-control col-4" id="inputRelease" placeholder="ここに発売日を記入">
  </div>

  <div>ジャンル</div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
    <label class="form-check-label" for="inlineRadio1">J-POP</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
    <label class="form-check-label" for="inlineRadio2">K-POP</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
    <label class="form-check-label" for="inlineRadio3">洋楽</label>
  </div>

  <div class="form-group mt-3">
    <label for="inputsabel">レーベル名</label>
    <input type="text" class="form-control" id="inputLabel" placeholder="レーベル名">
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">商品詳細</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="ここに商品の詳細を記入"></textarea>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">スタッフコメント</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="ここにスタッフコメントを記入"></textarea>
  </div>

  <p>シングル/アルバム内のコンテンツ</p>
  <div class="card p-3 mb-3">
    <p>[Disc1]</p>
    <form class="form-inline">
      <div class="form-group input-group mb-2">
        <input type="text" class="form-control col-8" placeholder="1.ここに曲のタイトルを記入">
        <button type="submit" class="btn btn-primary col-2 ml-1">追加</button>
        <button type="submit" class="btn btn-danger col-2 ml-1">削除</button>
      </div>
    </form>
    <div class="text-center mx-auto my-2">
    <button type="submit" class="btn btn-lg btn-primary">新規登録する</button>
  </div>
  </div><!-- card -->

  <div class="text-center mx-auto my-3">
    <button type="submit" class="btn btn-lg btn-primary">DISCを増やす</button>
  </div>

  <div class="text-center mx-auto my-3">
    <button type="submit" class="btn btn-lg btn-primary">新規登録する</button>
  </div>

</form>

</div><!-- card -->

